# ========================================
# MULTI-BOT CONFIGURATION
# ========================================

# ✅ MASTER BOT
BOT_TOKEN_MASTER=your_master_bot_token_here
ADMIN_IDS_MASTER=123456789,987654321

# ✅ SALES BOT
BOT_TOKEN_SALES=your_sales_bot_token_here
ADMIN_IDS_SALES=111111111,222222222

# ========================================
# DATABASE CONFIGURATION (SHARED)
# ========================================
POSTGRES_PASSWORD=SecurePass2026!

# ========================================
# SENTRY MONITORING (OPTIONAL)
# ========================================
SENTRY_ENABLED=false
SENTRY_DSN_MASTER=
SENTRY_DSN_SALES=

# ========================================
# NOTES:
# ========================================
# 1. Каждый бот автоматически получает:
#    - Свою schema в PostgreSQL (master_bot, sales_bot)
#    - Свой key prefix в Redis (master_bot:, sales_bot:)
#
# 2. Данные полностью изолированы между ботами
#
# 3. Для добавления нового бота:
#    - Добавьте сервис в docker-compose.yml
#    - Укажите уникальный CLIENT_ID
#    - Укажите уникальный PG_SCHEMA
#    - Укажите уникальный REDIS_KEY_PREFIX
