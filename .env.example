# === BOT CONFIGURATION ===
# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# === ADMIN SETTINGS ===
# Admin Telegram IDs (через запятую, получить у @userinfobot)
ADMIN_IDS=123456789,987654321

# Максимальное количество добавлений админов в час
MAX_ADMIN_ADDITIONS_PER_HOUR=3

# === DATABASE TYPE ===
# ✅ НОВОЕ: Выбор типа БД (postgresql или sqlite)
DB_TYPE=postgresql

# === POSTGRESQL CONFIGURATION ===
# ✅ НОВОЕ: PostgreSQL connection string
DATABASE_URL=postgresql://booking_user:SecurePass2026!@postgres:5432/booking_db

# Connection pool settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30.0
DB_COMMAND_TIMEOUT=60.0

# === LEGACY SQLITE (не используется при DB_TYPE=postgresql) ===
DATABASE_PATH=bookings.db

# === DATABASE RETRY LOGIC ===
DB_MAX_RETRIES=3
DB_RETRY_DELAY=0.5
DB_RETRY_BACKOFF=2.0

# === REDIS (FSM Storage) ===
# ✅ РЕКОМЕНДУЕТСЯ: Включить Redis для production
REDIS_ENABLED=True
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# === BOOKING SETTINGS ===
MAX_BOOKINGS_PER_USER=3
CANCELLATION_HOURS=24

# === REMINDERS ===
REMINDER_HOURS_BEFORE_1H=1
REMINDER_HOURS_BEFORE_2H=2
REMINDER_HOURS_BEFORE_24H=24

# === FEEDBACK ===
FEEDBACK_HOURS_AFTER=2

# === SERVICE INFO ===
SERVICE_LOCATION=Москва, ул. Примерная, 1

# === ONBOARDING ===
ONBOARDING_DELAY_SHORT=1.5
ONBOARDING_DELAY_LONG=3.0

# === WORK SCHEDULE ===
WORK_HOURS_START=9
WORK_HOURS_END=18

# === SENTRY (Error Monitoring) ===
SENTRY_ENABLED=False
# SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# === BACKUP ===
BACKUP_ENABLED=True
BACKUP_DIR=backups
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# === BROADCAST ===
BROADCAST_DELAY=0.05

# === RATE LIMITING ===
RATE_LIMIT_MESSAGE=0.5
RATE_LIMIT_CALLBACK=0.3

# === CALENDAR ===
CALENDAR_MAX_MONTHS_AHEAD=3
