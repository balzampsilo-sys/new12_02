# ============================================
# SHARED CONFIGURATION FOR ALL CLIENTS
# ============================================
# Copy this file to .env.shared.local and customize!
# NEVER commit .env.shared.local with real passwords!

# PostgreSQL Configuration
POSTGRES_HOST=postgres-shared
POSTGRES_PORT=5432
POSTGRES_ADMIN_USER=booking_admin
POSTGRES_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DEFAULT_DB=postgres

# Redis Configuration
REDIS_HOST=redis-shared
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_ENABLED=true

# Shared Database Credentials
# All clients use these credentials (with separate databases)
DB_USER_PASSWORD=CHANGE_ME_CLIENT_PASSWORD
DB_TYPE=postgresql

# Connection Pool Settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30.0
DB_COMMAND_TIMEOUT=60.0

# Network Configuration
NETWORK_NAME=new12_02_booking-network
